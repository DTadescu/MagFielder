<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textColorSecondary">@color/ivory</item>
    </style>

    <style name="DialogWindowStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="windowFixedHeightMajor">95%</item>
        <item name="windowFixedHeightMinor">95%</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InputStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/input_field</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

    <style name="ResultField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="DialogStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
